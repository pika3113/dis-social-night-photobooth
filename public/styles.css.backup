* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
  background-size: 400% 400%;
  animation: gradientShift 15s ease infinite;
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
  overflow: hidden;
  position: relative;
}

body::before {
  content: '';
  position: absolute;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle at 30% 50%, rgba(255,255,255,0.1) 0%, transparent 50%),
              radial-gradient(circle at 70% 80%, rgba(255,255,255,0.05) 0%, transparent 50%);
  animation: float 20s ease-in-out infinite;
}

@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  33% { transform: translate(30px, -30px) rotate(120deg); }
  66% { transform: translate(-20px, 20px) rotate(240deg); }
}

.container {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px) saturate(180%);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 30px;
  padding: 50px;
  max-width: 700px;
  width: 100%;
  box-shadow: 0 25px 80px rgba(0, 0, 0, 0.3),
              inset 0 1px 0 rgba(255, 255, 255, 0.3);
  position: relative;
  z-index: 1;
  animation: containerEntrance 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes containerEntrance {
  0% {
    opacity: 0;
    transform: scale(0.9) translateY(20px);
  }
  100% {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

h1 {
  text-align: center;
  color: #fff;
  margin-bottom: 10px;
  font-size: 3em;
  font-weight: 800;
  text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  letter-spacing: -1px;
  animation: titleGlow 3s ease-in-out infinite;
}

@keyframes titleGlow {
  0%, 100% { text-shadow: 0 0 20px rgba(255, 255, 255, 0.5), 0 2px 20px rgba(0, 0, 0, 0.3); }
  50% { text-shadow: 0 0 30px rgba(255, 255, 255, 0.8), 0 2px 25px rgba(0, 0, 0, 0.4); }
}

.subtitle {
  text-align: center;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 30px;
  font-size: 1.2em;
  font-weight: 300;
  text-shadow: 0 1px 10px rgba(0, 0, 0, 0.2);
}

.upload-area {
  border: 3px dashed #667eea;
  border-radius: 15px;
  padding: 40px;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  background: #f8f9ff;
}

.upload-area:hover {
  border-color: #764ba2;
  background: #f0f1ff;
}

.upload-area.dragover {
  border-color: #764ba2;
  background: #e8e9ff;
  transform: scale(1.02);
}

.upload-icon {
  font-size: 4em;
  margin-bottom: 20px;
}

.upload-text {
  font-size: 1.2em;
  color: #555;
  margin-bottom: 10px;
}

.upload-hint {
  font-size: 0.9em;
  color: #888;
}

input[type="file"] {
  display: none;
}

.btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  padding: 18px 45px;
  border-radius: 50px;
  font-size: 1.2em;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  margin-top: 20px;
  width: 100%;
  font-weight: 700;
  box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.btn:hover::before {
  width: 300px;
  height: 300px;
}

.btn:hover {
  transform: translateY(-3px) scale(1.02);
  box-shadow: 0 15px 40px rgba(102, 126, 234, 0.5);
}

.btn:active {
  transform: translateY(-1px) scale(0.98);
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

.preview-container {
  margin-top: 30px;
  text-align: center;
  display: none;
}

.preview-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  justify-content: center;
  margin-bottom: 20px;
}

.preview-image {
  max-width: 150px;
  max-height: 150px;
  border-radius: 10px;
  object-fit: cover;
}

.photo-count {
  text-align: center;
  color: #666;
  margin-bottom: 10px;
}

.qr-container {
  background: white;
  padding: 30px;
  border-radius: 15px;
  display: none;
  margin-top: 30px;
  border: 2px solid #667eea;
}

.qr-code {
  max-width: 300px;
  margin: 20px auto;
  display: block;
}

.download-url {
  background: #f8f9ff;
  padding: 15px;
  border-radius: 10px;
  word-break: break-all;
  margin-top: 20px;
  font-family: monospace;
  font-size: 0.9em;
  color: #555;
}

.success-message {
  text-align: center;
  color: #28a745;
  font-size: 1.3em;
  margin-bottom: 20px;
  font-weight: bold;
}

.loading {
  display: none;
  text-align: center;
  margin-top: 20px;
}

.spinner {
  border: 4px solid #f3f3f3;
  border-top: 4px solid #667eea;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  animation: spin 1s linear infinite;
  margin: 0 auto;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.error-message {
  background: #ffebee;
  color: #c62828;
  padding: 15px;
  border-radius: 10px;
  margin-top: 20px;
  display: none;
}

/* Download page styles */
.photo-container {
  margin: 30px 0;
  display: none;
}

.photo {
  max-width: 100%;
  max-height: 500px;
  border-radius: 15px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  margin-bottom: 30px;
}

.btn-secondary {
  background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
  box-shadow: 0 10px 30px rgba(108, 117, 125, 0.3);
}

.btn-secondary:hover {
  box-shadow: 0 15px 40px rgba(108, 117, 125, 0.5);
}

.btn.primary {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  box-shadow: 0 10px 30px rgba(240, 147, 251, 0.4);
}

.btn.primary:hover {
  box-shadow: 0 15px 40px rgba(240, 147, 251, 0.6);
}

.photo-info {
  background: #f8f9ff;
  padding: 15px;
  border-radius: 10px;
  margin-bottom: 20px;
  font-size: 0.95em;
  color: #555;
}

.photo-info p {
  margin: 5px 0;
}

.loading-text {
  color: #667eea;
  font-size: 1.1em;
}

.error {
  display: none;
  background: #ffebee;
  color: #c62828;
  padding: 20px;
  border-radius: 10px;
  margin: 20px 0;
}

.error h2 {
  margin-bottom: 10px;
}

/* New UI Styles */
.view-section {
  text-align: center;
}

.hidden {
  display: none !important;
}

.large-btn {
  font-size: 2.5em;
  padding: 40px 80px;
  margin-top: 40px;
  box-shadow: 0 20px 60px rgba(102, 126, 234, 0.4);
}

.large-btn:hover {
  box-shadow: 0 25px 70px rgba(102, 126, 234, 0.6);
  transform: translateY(-5px) scale(1.05);
}

.legacy-upload {
  margin-top: 50px;
  opacity: 0.6;
  font-size: 0.8em;
}

.controls {
  display: flex;
  gap: 20px;
  justify-content: center;
  margin-bottom: 30px;
  animation: slideUp 0.5s ease-out 0.2s both;
}

@keyframes slideUp {
  0% {
    opacity: 0;
    transform: translateY(20px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.status-text {
  color: rgba(255, 255, 255, 0.9);
  font-style: italic;
  margin-bottom: 20px;
  font-size: 1.1em;
  text-shadow: 0 1px 10px rgba(0, 0, 0, 0.2);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.7;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.02);
  }
}

.live-gallery {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
  gap: 20px;
  max-height: 500px;
  overflow-y: auto;
  padding: 20px;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  border-radius: 20px;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.live-gallery::-webkit-scrollbar {
  width: 8px;
}

.live-gallery::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 10px;
}

.live-gallery::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 10px;
}

.live-gallery::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.3);
}

.photo-card {
  position: relative;
  overflow: hidden;
  border-radius: 15px;
  animation: popIn 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.photo-card img {
  width: 100%;
  height: 200px;
  object-fit: cover;
  border-radius: 15px;
  box-shadow: 0 5px 20px rgba(0,0,0,0.3);
  transition: transform 0.3s ease;
}

.photo-card:hover img {
  transform: scale(1.05);
}

@keyframes popIn {
  0% {
    transform: scale(0.8) rotate(-3deg);
    opacity: 0;
  }
  50% {
    transform: scale(1.05) rotate(1deg);
  }
  100% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
}

.qr-wrapper {
  background: white;
  padding: 30px;
  border-radius: 20px;
  display: inline-block;
  margin: 30px 0;
  box-shadow: 0 10px 40px rgba(0,0,0,0.3);
  animation: qrBounce 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.qr-wrapper img {
  max-width: 300px;
  width: 100%;
  border-radius: 10px;
}

@keyframes qrBounce {
  0% {
    opacity: 0;
    transform: scale(0.5) rotate(-10deg);
  }
  50% {
    transform: scale(1.1) rotate(5deg);
  }
  100% {
    opacity: 1;
    transform: scale(1) rotate(0deg);
  }
}

.link {
  color: #667eea;
  text-decoration: none;
  font-weight: bold;
  font-size: 1.2em;
}

.link:hover {
  text-decoration: underline;
}

